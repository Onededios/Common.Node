		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Onededios/Common.Node.git"
	},
	"keywords": [
		"node",
		"tools",
		"utils",
		"common"
	],
	"author": "Onededios",
	"license": "Apache-2.0 (SEE IN LICENSE)",
	"bugs": {
		"url": "https://github.com/Onededios/Common.Node/issues"
	},
	"homepage": "https://github.com/Onededios/Common.Node#readme",
	"devDependencies": {
		"@types/node": "^24.1.0"
	},
	"dependencies": {
		"dotenv": "^17.2.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
