{
	"name": "@onededios/common.node",
	"description": "Common node utilities for applications",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.d.ts.map",
		"index.js"
	],
	"scripts": {
		"clean": "rimraf dist .tsbuildinfo",
		"build": "npm run clean && tsc -p tsconfig.json",
		"prepublishOnly": "npm run build && npm pack --dry-run",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"postcoverage": "npx vitest --ui --coverage.enabled --coverage.reporter=html"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Onededios/Common.Node.git"
	},
	"keywords": [
		"node",
		"tools",
		"utils",
		"common"
	],
	"author": "Onededios",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/Onededios/Common.Node/issues"
	},
	"homepage": "https://github.com/Onededios/Common.Node#readme",
	"devDependencies": {
		"@types/node": "^24.1.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4"
	},
	"dependencies": {
		"dotenv": "^17.2.1",
		"random-js": "^2.1.0",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
