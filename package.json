{
	"name": "@onededios/common.node",
	"version": "1.0.0",
	"description": "Common node utilities for applications",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
